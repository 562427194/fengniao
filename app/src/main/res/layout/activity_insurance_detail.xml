<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="150dp"
                    android:textColor="@color/black_list_title"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_min_age_range"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:text="投保范围：0-59周岁"
                        android:textColor="@color/gray_text_content"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_min_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥800"
                        android:textColor="@color/yellow_price"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_max_age_range"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:text="投保范围：60-70周岁"
                        android:textColor="@color/gray_text_content"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_max_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥1800"
                        android:textColor="@color/yellow_price"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/gray_bg_common"
                android:orientation="horizontal">

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/tab_text_checked" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="产品介绍"
                    android:textColor="@color/tab_text_checked"
                    android:textSize="14dp" />
            </LinearLayout>

            <include layout="@layout/layout_demo_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投保范围："
                        android:textColor="@color/gray_text_content"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_age_range_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="0-70周岁，在周岁在医院接受，规定手术的治疗者，均可以作为本保险的被保险人"
                        android:textColor="@color/gray_text_content"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保险期间："
                        android:textColor="@color/gray_text_content"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_insurance_period"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="本保险的保险期间为被保险人进入医院的手术室起至出院当日的24时止，最长不超过180天"
                        android:textColor="@color/gray_text_content"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保险费用："
                        android:textColor="@color/gray_text_content"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/tv_price_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="0-59周岁保费为minPrice元人名币，60-70周岁保费为maxPrice元人名币"
                        android:textColor="@color/gray_text_content"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="保险金额："
                android:textColor="@color/gray_text_content"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvguarantee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/gray_text_content"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/iv_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/img_compensate" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="同意"
                    android:textColor="@color/black_text"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《投保须知》"
                    android:textColor="@color/wskcs_blue"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_tk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《保险条款》"
                    android:textColor="@color/wskcs_blue"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_sm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《特别说明》"
                    android:textColor="@color/wskcs_blue"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_lc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《理赔流程》"
                    android:textColor="@color/wskcs_blue"
                    android:textSize="12dp" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_buy"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/selector_fn_default_bt"
                android:text="@string/buy"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>